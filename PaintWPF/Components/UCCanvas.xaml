<UserControl x:Class="PaintWPF.Components.UCCanvas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PaintWPF.Components" 
             xmlns:paintwpf="clr-namespace:PaintWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="DarkGray" BorderThickness="1">
        <Canvas Background="LightGray" AllowDrop="True" x:Name="mainCanvas" Margin="0,0,0,0" Drop="DrawCanvas_Drop" DragOver="DrawCanvas_DragOver" MouseLeftButtonDown="DrawCanvas_MouseLeftButtonDown" MouseMove="DrawCanvas_MouseMove" MouseRightButtonDown="DrawCanvas_MouseRightButtonDown">
            <local:UCPainter x:Name="painter" DrawFinished="painter_DrawFinished" />
        </Canvas>
    </Border>

</UserControl>
